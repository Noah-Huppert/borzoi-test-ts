{
    "env": {
        "es2021": true,
	    "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/eslint-recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
 	    "no-var": "error",
	    "eqeqeq": "error",
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ],
	    "curly": [
		    "warn",
		    "all"
	    ],
	    "prefer-const": [
		    "warn",
		    {}
	    ]
    }
}
